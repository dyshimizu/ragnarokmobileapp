extends layout

block content

    main(role='main')
        section(class='jumbotron text-center')
            div(class='container')
                h1(class='jumbotron-heading') #{title}
                p(class='lead text-muted') Algum texto de exemplo
                p
                    a(class='btn btn-primary my-2' href='#') Main call
                    a(class='btn btn-secondary my-2' href='#') Secondary call        
        div(class='album py-5 bg-light')
            div(class='container')
                each card in card_list
                    div(class='row')
                        div(class='card col-2 shadow-sm') #{card.alias_name}
                        div(class='card col-1 shadow-sm') #{card.color}
                        div(class='card col-1 shadow-sm') #{card.type}
                        div(class='card col-3 shadow-sm') #{card.main_effect}
                        div(class='card col-3 shadow-sm') #{card.deposit_effect}
                        div(class='card col-2 shadow-sm') #{card.loot_effect}
